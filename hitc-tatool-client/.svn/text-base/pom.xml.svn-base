<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>ca.uvic.hitc</groupId>
  <version>0.0.1-SNAPSHOT</version>
  <name>HitC Tatool Client</name>
  <dependencies>
  	<dependency>
  		<groupId>ch.tatool</groupId>
  		<artifactId>tatool-core</artifactId>
  		<version>1.2.1-FORK</version>
  	</dependency>
  	<dependency>
  		<groupId>ch.tatool</groupId>
  		<artifactId>tatool-test</artifactId>
  		<version>1.2.1-FORK</version>
  	</dependency>
  	<dependency>
  		<groupId>ch.tatool</groupId>
  		<artifactId>tatool-app</artifactId>
  		<version>1.2.1-FORK</version>
  	</dependency>
  </dependencies>
  <build>
		<plugins>
			<!-- Plugin to deploy your application as a Webstart application -->
			<plugin>
				<groupId>org.codehaus.mojo.webstart</groupId>
				<artifactId>webstart-maven-plugin</artifactId>
				<version>1.0-beta-2</version>
				<configuration>
					<jnlp>
						<mainClass>ca.uvic.hitc.app.DemoHitCApp</mainClass>
					</jnlp> 
					<sign>
						<keystore>../tatool.jks</keystore>
						<keypass>password</keypass>
						<storepass>password</storepass>
						<alias>tatool</alias>
						<dnameCn>tatool</dnameCn>
						<dnameOu>HitC</dnameOu>
						<dnameO>UVic</dnameO>
						<dnameL>Victoria</dnameL>
						<dnameSt>BC</dnameSt>
						<dnameC>CA</dnameC>
						<verify>true</verify>
						<keystoreConfig>
							<delete>true</delete> 
							<gen>true</gen>
						</keystoreConfig>
					</sign>
					<pack200>true</pack200>
					<gzip>true</gzip>
					<verbose>true</verbose>
				</configuration>
			</plugin>
			
			<!-- For building the client as a JAR -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-jar-plugin</artifactId>
				<version>2.4</version>
				<configuration>
					<archive>
						<manifest>
							<mainClass>ca.uvic.hitc.app.DemoHitCApp</mainClass>
							<addClasspath>true</addClasspath>
						</manifest>
					</archive>
				</configuration>
			</plugin>
			<plugin>
				<groupId>com.jolira</groupId>
				<artifactId>onejar-maven-plugin</artifactId>
				<version>1.4.4</version>
				<executions>
					<execution>
						<goals>
							<goal>one-jar</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
  <artifactId>hitc-tatool-client</artifactId>
</project>