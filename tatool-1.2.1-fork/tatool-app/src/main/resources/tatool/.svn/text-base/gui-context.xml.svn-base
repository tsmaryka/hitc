<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN 2.0//EN" "http://www.springframework.org/dtd/spring-beans-2.0.dtd">

<!-- 
	Defines user interface beans
-->
<beans>

	 <!-- 
		LoginFrame - application entry point
	 -->
	 <bean id="LoginFrame" class="ch.tatool.app.gui.LoginFrame" init-method="init">
		<property name="userAccountService">
        	<ref bean="UserAccountService"/>
        </property>
        <property name="guiController">
        	<ref bean="GuiController" />
        </property>
        <property name="messages">
        	<ref bean="Messages"/>
        </property>
	</bean>

	<!--
  		ModuleManagerFrame - application entry point 
	-->
	<bean id="ModuleManagerFrame" class="ch.tatool.app.gui.ModuleManagerFrame" init-method="init">
		<property name="userAccountService">
        	<ref bean="UserAccountService"/>
        </property>
		<property name="moduleService">
        	<ref bean="ModuleService"/>
        </property>
        <property name="guiController">
        	<ref bean="GuiController" />
        </property>
        <property name="moduleCreatorRegistry">
        	<ref bean="ModuleCreatorRegistry"/>
        </property>
        <property name="messages">
        	<ref bean="Messages"/>
        </property>
	</bean>

	<!--
  		ModuleOverviewFrame - main tatool module window 
	-->
	<bean id="ModuleOverviewFrame" class="ch.tatool.app.gui.ModuleOverviewFrame" init-method="init">
		<property name="moduleService">
        	<ref bean="ModuleService"/>
        </property>
        <property name="dataService">
        	<ref bean="DataService"/>
        </property>
        <property name="executionService">
        	<ref bean="ExecutionService"/>
        </property>
        <property name="dataExportService">
        	<ref bean="DataExportService"/>
        </property>
        <property name="guiController">
        	<ref bean="GuiController" />
        </property>
        <property name="messages">
        	<ref bean="Messages"/>
        </property>
	</bean>

</beans>
