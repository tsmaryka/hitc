<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN 2.0//EN" "http://www.springframework.org/dtd/spring-beans-2.0.dtd">

<beans>

	<!-- Load base app -->
	<import resource="classpath:tatool/app-context.xml" />

	<!-- Load services -->
	<import resource="classpath:tatool/services-context.xml" />

	<!-- Load GUI elements -->
	<import resource="classpath:tatool/gui-context.xml" />

	<!-- Load core spring files  -->
	<import resource="classpath*:tatool/core/*-context.xml" />

	<!-- Load overwrites from the extension directory -->
	<import resource="classpath*:tatool/extension/*-context.xml" />
</beans>
